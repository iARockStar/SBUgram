<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="447.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controllers.PasswordRetrieveController">
<JFXTextField fx:id="usernameField" focusColor="LIMEGREEN" layoutX="156.0" layoutY="81.0" promptText="username" />
    <JFXButton fx:id="findQuestionButton" buttonType="RAISED" layoutX="144.0" layoutY="139.0" onAction="#find" style="-fx-background-color: #32CD32;" text="find my question">
      <font>
         <Font size="18.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></JFXButton>
<JFXTextField fx:id="myAnswerField" focusColor="LIMEGREEN" layoutX="156.0" layoutY="255.0" promptText="your answer" />
   <Label fx:id="infoLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="129.0" layoutY="30.0" text="Please enter your username">
      <font>
         <Font name="Georgia Bold Italic" size="14.0" />
      </font></Label>
   <Label fx:id="questionLabel" alignment="CENTER" contentDisplay="CENTER" layoutY="200.0" prefHeight="27.0" prefWidth="447.0" style="-fx-background-color: #FFFFFF;" text="your question">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
    <JFXButton fx:id="submitButton" buttonType="RAISED" layoutX="139.0" layoutY="339.0" onAction="#submit" style="-fx-background-color: #32CD32;" text="submit my answer">
      <font>
         <Font size="18.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></JFXButton>
    <JFXPasswordField fx:id="newPassField" focusColor="LIMEGREEN" layoutX="155.0" layoutY="299.0" promptText="your new password" />
   <ImageView fitHeight="27.0" fitWidth="68.0" layoutX="14.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images/left_arrow_500px.png" />
      </image>
   </ImageView>
   <Button layoutX="14.0" layoutY="12.0" mnemonicParsing="false" onAction="#goBack" opacity="0.0" prefHeight="26.0" prefWidth="27.0" text="Button">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Button>
</AnchorPane>
